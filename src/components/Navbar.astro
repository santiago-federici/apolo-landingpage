---
import Button from "./Button.astro";
import MenuIcon from "../icons/MenuIcon.astro";

const navLinks = [
  { href: "#", text: "Features" },
  { href: "#", text: "Pricing" },
  { href: "#", text: "About" },
];
---

<header class="flex justify-between items-center py-4 px-6 xl:px-36">
  <img
    src="/logo.png"
    alt="logo"
    class="aspect-square size-16 cursor-pointer"
  />
  <nav
    class="flex items-center gap-4 [&>a]:transition-colors [&>a]:duration-200 max-md:hidden"
  >
    {
      navLinks.map((link) => (
        <a href={link.href} class="hover:text-primary hover:cursor-pointer">
          {link.text}
        </a>
      ))
    }
    <div class="space-x-2">
      <Button variant="ghost">Log In</Button>
      <Button variant="primary">Sign Up</Button>
    </div>
  </nav>
  <MenuIcon class="cursor-pointer md:hidden size-8" />
</header>
