---
import FigmaIcon from "../icons/FigmaIcon.astro";
import TwitterIcon from "../icons/TwitterIcon.astro";
import YoutubeIcon from "../icons/YoutubeIcon.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import BrandBadge from "./BrandBadge.astro";
---

<footer
  class="mt-36 flex flex-col py-8 px-6 xl:px-36 border-t border-neutral-800"
>
  <div class="flex md:justify-between flex-col md:flex-row space-y-4">
    <section
      class="space-y-4 max-sm:text-center max-sm:items-center max-sm:flex max-sm:flex-col"
    >
      <div class="flex gap-2 items-center">
        <img src="./logo.png" alt="Logo" class="aspect-square size-12" />
        <h3 class="text-xl font-medium">Admin dashboard</h3>
        <span
          class="bg-neutral-300 font-medium rounded-md text-base px-2 text-background"
        >
          Beta
        </span>
      </div>

      <p class="text-sm text-muted-foreground">
        Admin dashboard is still in early Beta, so please keep in mind that
        there may be some imperfections as we continue to work on improving it.
      </p>

      <div class="flex gap-2">
        <BrandBadge href="#">
          <FigmaIcon class="size-5" />
        </BrandBadge>

        <BrandBadge href="x.com">
          <TwitterIcon class="size-5" />
        </BrandBadge>

        <BrandBadge href="youtube.com">
          <YoutubeIcon class="size-5" />
        </BrandBadge>

        <BrandBadge href="https://github.com/santiago-federici">
          <GithubIcon class="size-5" />
        </BrandBadge>
      </div>
    </section>

    <section class="flex flex-col gap-2">
      <p class="text-lg font-medium">Navigation</p>
      <a
        href="#features"
        class="text-base text-muted-foreground hover:text-primary duration-200"
        >Features</a
      >
      <a
        href="#pricing"
        class="text-base text-muted-foreground hover:text-primary duration-200"
        >Pricing</a
      >
      <a
        href="#"
        class="text-base text-muted-foreground hover:text-primary duration-200"
        >About</a
      >
    </section>
  </div>

  <!-- separator -->
  <div class="border-t border-neutral-800 my-16"></div>

  <div
    class="flex justify-between flex-col items-center space-y-4 text-center md:text-start md:flex-row"
  >
    <p class="text-sm text-muted-foreground font-medium">
      Â© 2023 Relume. All rights reserved.
    </p>
    <div class="text-sm text-muted-foreground space-x-2">
      <a href="#" class="underline font-medium hover:text-white/70"
        >Privacy Policy</a
      >
      <a href="#" class="underline font-medium hover:text-white/70"
        >Terms & Conditions</a
      >
    </div>
  </div>
</footer>
